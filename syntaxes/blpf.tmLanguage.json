{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "BLPF",
	"scopeName": "source.blpf",
	"fileTypes": ["blpf"],
	"patterns": [
	  { "include": "#instructions" },
	  { "include": "#comments" },
	  { "include": "#numbers" },
	  { "include": "#labels" }
	],
	"repository": {
	  "instructions": {
		"patterns": [
		  {
			"name": "keyword.instruction.blpf",
			"match": "\\b(STA|STX|STY|TAX|TAY|TXA|TYA|TXY|TYX|PHA|PHX|PHY|POA|POX|POY|ADD|SUB|MUL|DIV|MOD|CMP|BNE|JMP|BEQ|AND|OR|XOR|NOT|HLT|PRINT|STO|LDA)\\b"
		  }
		]
	  },
	  "comments": {
		"patterns": [
		  {
			"name": "comment.line.semicolon.blpf",
			"match": ";.*$"
		  }
		]
	  },
	  "numbers": {
		"patterns": [
		  {
			"name": "constant.numeric.blpf",
			"match": "\\b\\d+\\b"
		  }
		]
	  },
	  "labels": {
		"patterns": [
		  {
			"name": "entity.name.label.blpf",
			"match": "^\\s*[A-Za-z_][A-Za-z0-9_]*:"
		  }
		]
	  }
	}
  }
  